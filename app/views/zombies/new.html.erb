<h1>Create a new Zombie</h1>
<%= form_for @zombie do |f| %>
  <%=f.label :name %>
  <%=f.text_field :name %>
  <br>
  <%=f.label :graveyard %>
  <%=f.text_field :graveyard %>
  <br>
  <%=f.label :nickname %>
  <%=f.text_field :nickname %>
  <span id="nickname_error" class="error">Nicknames can only contain these letters: a g h n r o u</span>
  <br>
  <br>
  <%=f.label :date_of_birth %>
  <%=f.date_select :date_of_birth, :start_year => 1500 %>
  <br>
  <%=f.label :date_of_death %>
  <%=f.date_select :date_of_death %>
  <br>
  <%=f.label :date_of_undeath %>
  <%=f.date_select :date_of_undeath %>
  <br>
  <%=f.label :description %>
  <%=f.text_field :description %>
  <br>

<br>
  <%=f.label :weapon %>
  <%=f.text_field :weapon %>

  <%=f.submit %>
<%end%>
