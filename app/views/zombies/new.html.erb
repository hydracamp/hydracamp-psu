<h1>Create a new Zombie</h1>
<%= twitter_bootstrap_form_for @zombie do |f| %>
  <%=f.text_field :name %>
  <%=f.text_field :graveyard %>
  <%=f.text_field :description %>
  
  <%= f.file_field :avatar %>
  <%=f.text_field :nickname %>
  <span id="nickname_error" class="error">Nicknames can only contain these characters: a g h n r o u !</span>

  <%=f.date_select :date_of_birth, 'Date of birth', :start_year => 1500 %>
  <%=f.date_select :date_of_death, 'Date of death' %>
  <%=f.date_select :date_of_undeath, 'Date of undeath' %>

  <%=f.text_field :weapon %>
  <%=f.submit %>
<%end%>
