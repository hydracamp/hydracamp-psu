<!DOCTYPE html>
<html>
<head>
  <title>Hydracamp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= form_tag(search_zombies_path, :method => "get", :class => 'pull-right') do %>
    <%= label_tag(:q, "Find a zombie:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search Zombies") %>
  <% end %>

  <% if current_user %>
    <div>
      Welcome <%= current_user.email %> |
      <%= button_to 'logout', destroy_user_session_path, method: :delete %>
    </div>
  <% else %>
    <div>
      Welcome stranger |
      <%= link_to 'login', new_user_session_path %>
    </div>
  <% end %>

  <div></div>
<%- if flash[:notice] %>
  <div class="msg notice"><%=flash[:notice]%></div>
<%end %>
<%= yield %>

</body>
</html>
