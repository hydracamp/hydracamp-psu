<h1>Show Tweets</h1>

<table>
	<tr>
	<td id="zombie_name">Zombie</td>
	<td id="zombie_tweet">Said ...</td>
    </tr>
	<%- @tweets.each do |tweet| %>
	<tr>
	  <td class="tweet"><%= tweet.zombie.name %></td>
      <td class="tweet"><%= tweet.message %></td>
	  <td class="tweet"><%= link_to "delete", tweet_path(tweet), :method => :delete %>
    </tr>
  <% end %>



