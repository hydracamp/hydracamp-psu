<h1>Create a new Zombie</h1>
<%= twitter_bootstrap_form_for @zombie do |f| %>
  <%=f.text_field :name %>
  <%=f.text_field :graveyard %>
  <%=f.text_area :description, size: "20x20" %>

    <div class="zombieCreateRow">
      <div class="field">
        <%= f.file_field :avatar %>
        <span class="label label-important">JPG, GIF, or PNG (less than 2MB)</span>
      </div>
    </div>

  <span id="nickname_error" class="error">Nicknames can only contain these characters: a g h n r o u !</span>

  <%=f.text_field :nickname %>
  <%=f.text_field :date_of_birth %>
  <%=f.text_field :date_of_death %>
  <%=f.text_field :date_of_undeath %>
  <%=f.text_field :weapon %>

  <%=f.submit %>
<%end%>
