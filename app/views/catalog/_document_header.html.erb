<% # header bar for doc items in index view -%>
<div class="documentHeader">

  <% # bookmark functions for items/docs -%>
  <%= render_index_doc_actions document, :wrapping_class => "documentFunctions hidden-phone" %>

  <% # main title container for doc partial view -%>
  <h5 class="index_title"><%= t('blacklight.search.documents.counter', :counter => (document_counter + 1 + @response.params[:start].to_i)) %>
   <% if can?(:read, document) %>
     <%= link_to document.get('name_t'), document.path %>
     <%#= link_to_document document, :label=>document.get('name_t') %>
   <% else %>
      No read access to: 
      <%= link_to document.get('name_t'), document.path %>
   <% end %>
  </h5>
</div>

